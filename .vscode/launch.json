{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/test/testData",
        "${workspaceFolder}/test/testData/defaultOpen.txt",
        "--extensionDevelopmentPath=${workspaceFolder}"
        // "--disable-extensions"
      ],
      "sourceMaps": true
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/test/testData",
        "${workspaceFolder}/test/testData/defaultOpen.txt",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/test/suite/index",
        "--disable-extensions"
      ],
      "sourceMaps": true
    }
  ]
}
